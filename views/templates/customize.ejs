    currentConfig.titleFontSize = template.default_font_size || currentConfig.titleFontSize;
    currentConfig.textX = template.default_text_x || currentConfig.textX;
    currentConfig.textY = template.default_text_y || currentConfig.textY;
    
    // Apply template-specific theme based on name
    const templateName = template.name.toLowerCase();
    if (templateName.includes('golden') || templateName.includes('winner')) {
        applyTheme('winner');
        currentConfig.certificateTitle = 'Certificate of Excellence';
        currentConfig.completionText = 'has demonstrated exceptional excellence in';
        currentConfig.recognitionText = 'with outstanding performance';
    } else if (templateName.includes('silver') || templateName.includes('achievement')) {
        applyTheme('runner');
        currentConfig.certificateTitle = 'Achievement Award';
        currentConfig.completionText = 'has achieved outstanding performance in';
        currentConfig.recognitionText = 'with distinction';
    } else if (templateName.includes('bronze') || templateName.includes('participation')) {
        applyTheme('bronze');
        currentConfig.certificateTitle = 'Certificate of Participation';
        currentConfig.completionText = 'has successfully participated in';
    } else if (templateName.includes('academic')) {
        applyTheme('academic');
        currentConfig.certificateTitle = 'Academic Excellence Award';
        currentConfig.completionText = 'has excelled academically in';
        currentConfig.recognitionText = 'with honors';
    } else if (templateName.includes('corporate')) {
        applyTheme('corporate');
        currentConfig.certificateTitle = 'Professional Achievement';
        currentConfig.completionText = 'has successfully completed the professional program';
    } else if (templateName.includes('modern') || templateName.includes('elegant')) {
        applyTheme('elegant');
        currentConfig.certificateTitle = 'Certificate of Achievement';
        currentConfig.completionText = 'has successfully completed';
